<body>
<h1>Curso ENEM Online</h1>
<div id="lessons"></div>

<script>
async function loadLessons() {
  const res = await fetch('lessons.json');
  const lessons = await res.json();
  const container = document.getElementById('lessons');
  lessons.forEach((l, i) => {
    const div = document.createElement('div');
    div.className = 'lesson';
    div.innerHTML = `<h2>${l.title}</h2>
    <p>${l.text}</p>
    <button onclick="playTTS(${i})">üéß Ouvir Aula</button>
    <button onclick="downloadPDF(${i})">üìÑ Baixar PDF</button>`;
    container.appendChild(div);
  });
}

function playTTS(index) {
  alert('Aqui chamaria o TTS para a aula '+index);
}

function downloadPDF(index) {
  window.open(`pdfs/lesson${index+1}.pdf`, '_blank');
}

loadLessons();
</script>
</body>
